<h1>Members</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Premium Member?</th>
  </tr>
  <% for member in @members %>
  <tr>
    <td><a href="/members/<%= member.id %>"><%= member.member_name %></a></td>
    <td><%= member.email %></td>
    <td><%= member.premium_membership %></td>

    <td> <form action="/bookings/<%= member.id %>/new" method="GET">
    <input type="submit" value="Book a Class">
    </form>
    </td>

    <td> <form action="/members/<%= member.id %>/edit" method="GET">
    <input type="submit" value="Edit">
    </form>
    </td>

    <td> <form action="/members/<%= member.id %>/delete" method="POST">
      <input type="submit" value="Delete">
    </form>
    </td>

  </tr>
  <% end %>
</table>
