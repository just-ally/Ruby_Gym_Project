<h2>Update Member Details</h2>

<form action="/members/<%= @member.id %>" method="post">

  <label for="member_name">Name:</label>
  <input type="text" name="member_name" value="<%= @member.member_name %>">

  <label for="email">Email:</label>
  <input type="text" name="email" value="<%= @member.email%>">

  <label for="premium_membership">Premium Membership:</label>
  <select name="premium_membership">
    <option
      <%= "selected" if @member.premium_membership %> value="true">Yes</option>
    <option
      <%= "selected" if !@member.premium_membership %> value="false">No</option>
  </select>

  <input class="btn btn--edit" type="submit" value="Update Member">
</form>
