<form action="/members/<%= @member.id %>" method="post">

  <label for="member_name">Name:</label>
  <input type="text" name="member_name" value="<%= @member.member_name %>">

  <label for="email">Email:</label>
  <input type="text" name="email" value="<%= @member.email%>">

  <label for="premium_membership">Premium Membership:</label>
  <select name="premium_membership">
    <% for member_option in @member_options %>
      <% if member_option == @member.premium_membership %>
        <option selected value="<%= member_option %>"><%= member_option %></option>
      <% else %>
        <option value="<%= member_option %>"><%= member_option %></option>
      <% end %>
    <% end %>
  </select>

  <input type="submit" value="Update Member">
</form>
